{% extends 'base.html.twig' %}

{% block lang %}fr{% endblock %}

{# SEO Meta Tags #}
{% block title %}Connexion - Silenus{% endblock %}
{% block description %}Connectez-vous à votre compte Silenus pour accéder à votre espace personnel.{% endblock %}
{% block keywords %}silenus, connexion, login, se connecter{% endblock %}

{# Canonical URL #}
{% block canonical %}{{ app.request.uri }}{% endblock %}

{# Open Graph #}
{% block og_title %}Connexion - Silenus{% endblock %}
{% block og_description %}Connectez-vous à votre compte Silenus pour accéder à votre espace personnel.{% endblock %}
{% block og_link %}{{ app.request.uri }}{% endblock %}
{% block og_image %}{{ app.request.getSchemeAndHttpHost() }}/build/img/gen/og-default.jpg{% endblock %}
{% block og_type %}website{% endblock %}
{% block og_locale %}fr_FR{% endblock %}

{# Robots - Ne pas indexer les pages de connexion #}
{% block robots %}noindex,follow{% endblock %}

{# Stylesheets #}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{# Javascripts #}
{% block javascripts %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block content %}
    <div class="max-w-md mx-auto">
        <!-- Header -->
        <div class="text-center mb-8 animate-fade-in">
            <div class="inline-block p-4 bg-slns-primary-500/20 rounded-full mb-4">
                <i data-lucide="log-in" class="w-12 h-12 text-slns-primary-400"></i>
            </div>
            <h2 class="text-4xl font-bold mb-2">
                <span class="bg-gradient-to-r from-slns-primary-400 to-slns-primary-600 bg-clip-text text-transparent">
                    Connexion
                </span>
            </h2>
            <p class="text-gray-400">Connectez-vous à votre compte {{ site_name }}</p>
        </div>

        <!-- Error Message -->
        {% if error %}
            <div class="glass border-red-500/30 bg-red-500/10 text-red-400 px-6 py-4 rounded-lg mb-6 animate-fade-in">
                <div class="flex items-center gap-3">
                    <i data-lucide="alert-circle" class="w-6 h-6"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            </div>
        {% endif %}

        <!-- Login Form -->
        <form method="post" class="glass-lg rounded-2xl p-8 space-y-6 animate-slide-up">
            <!-- Email Field -->
            <div>
                <label for="username" class="block text-gray-300 font-medium mb-2">
                    Email
                </label>
                <input 
                    type="email" 
                    id="username" 
                    name="_username" 
                    value="{{ last_username }}" 
                    required 
                    autofocus
                    class="glass-input w-full text-gray-100"
                    placeholder="vous@exemple.com"
                >
            </div>

            <!-- Password Field -->
            <div>
                <label for="password" class="block text-gray-300 font-medium mb-2">
                    Mot de passe
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="_password" 
                    required
                    class="glass-input w-full text-gray-100"
                    placeholder="••••••••"
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- Remember Me -->
            <div>
                <label class="flex items-center gap-3 cursor-pointer group">
                    <input 
                        type="checkbox" 
                        name="_remember_me" 
                        class="w-5 h-5 rounded border-white/20 bg-white/5 text-slns-primary-500 focus:ring-slns-primary-500 focus:ring-offset-0 cursor-pointer"
                    >
                    <span class="text-gray-300 group-hover:text-gray-100 transition-colors">Se souvenir de moi</span>
                </label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-primary w-full">
                Se connecter
            </button>

            <!-- Register Link -->
            <div class="text-center pt-4 border-t border-white/10">
                <p class="text-gray-400">
                    Pas encore de compte ? 
                    <a href="{{ path('slns_register') }}" class="text-slns-primary-400 hover:text-slns-primary-300 font-semibold transition-colors">
                        Créer un compte
                    </a>
                </p>
            </div>
        </form>
    </div>
{% endblock %}
