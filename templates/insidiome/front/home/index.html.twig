{% extends 'insidiome/front/base.html.twig' %}

{% block title %}Accueil - Insidiome{% endblock %}

{% block body %}
    <h2 style="color: #f5576c; margin-bottom: 20px;">{{ message }}</h2>
    
    <div style="line-height: 1.8;">
        <p style="font-size: 1.1rem; margin-bottom: 20px;">
            Bienvenue sur <strong>{{ site_name }}</strong>, votre plateforme dédiée.
        </p>

        {% if app.user %}
            <div style="background: #fff0f3; padding: 20px; border-radius: 8px; margin: 20px 0;">
                <h3 style="color: #f5576c; margin-bottom: 10px;">👋 Bonjour {{ app.user.email }} !</h3>
                <p>Vous êtes connecté sur votre espace Insidiome.</p>
            </div>
        {% else %}
            <div style="background: #fff0f3; padding: 20px; border-radius: 8px; margin: 20px 0;">
                <h3 style="color: #f5576c; margin-bottom: 10px;">🚀 Commencez maintenant</h3>
                <p style="margin-bottom: 15px;">Créez votre compte pour accéder à toutes les fonctionnalités.</p>
                <a href="{{ path('ndsm_register') }}" style="display: inline-block; background: #f5576c; color: white; padding: 12px 24px; border-radius: 5px; text-decoration: none; font-weight: 500;">
                    Créer un compte
                </a>
            </div>
        {% endif %}

        <div style="margin-top: 30px;">
            <h3 style="color: #f5576c; margin-bottom: 15px;">✨ Fonctionnalités</h3>
            <ul style="list-style: none; padding: 0;">
                <li style="padding: 10px 0; border-bottom: 1px solid #eee;">🔐 Authentification sécurisée</li>
                <li style="padding: 10px 0; border-bottom: 1px solid #eee;">🗄️ Base de données isolée</li>
                <li style="padding: 10px 0; border-bottom: 1px solid #eee;">🎨 Interface personnalisée</li>
                <li style="padding: 10px 0;">🚀 Architecture multisite</li>
            </ul>
        </div>
    </div>
{% endblock %}
