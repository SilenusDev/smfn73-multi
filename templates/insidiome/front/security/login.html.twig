{% extends 'insidiome/front/base.html.twig' %}

{% block title %}Connexion - Insidiome{% endblock %}

{% block body %}
    <h2 style="color: #f5576c; margin-bottom: 20px;">Connexion à {{ site_name }}</h2>

    {% if error %}
        <div class="alert alert-error">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post" style="max-width: 500px;">
        <div style="margin-bottom: 20px;">
            <label for="username" style="display: block; margin-bottom: 8px; font-weight: 500; color: #333;">
                Email
            </label>
            <input 
                type="email" 
                id="username" 
                name="_username" 
                value="{{ last_username }}" 
                required 
                autofocus
                style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 5px; font-size: 1rem;"
            >
        </div>

        <div style="margin-bottom: 20px;">
            <label for="password" style="display: block; margin-bottom: 8px; font-weight: 500; color: #333;">
                Mot de passe
            </label>
            <input 
                type="password" 
                id="password" 
                name="_password" 
                required
                style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 5px; font-size: 1rem;"
            >
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div style="margin-bottom: 20px;">
            <label style="display: flex; align-items: center; cursor: pointer;">
                <input type="checkbox" name="_remember_me" style="margin-right: 8px;">
                <span>Se souvenir de moi</span>
            </label>
        </div>

        <button 
            type="submit" 
            style="width: 100%; background: #f5576c; color: white; padding: 14px; border: none; border-radius: 5px; font-size: 1rem; font-weight: 500; cursor: pointer; transition: background 0.3s;"
            onmouseover="this.style.background='#e04858'"
            onmouseout="this.style.background='#f5576c'"
        >
            Se connecter
        </button>

        <div style="margin-top: 20px; text-align: center;">
            <p style="color: #666;">
                Pas encore de compte ? 
                <a href="{{ path('ndsm_register') }}" style="color: #f5576c; text-decoration: none; font-weight: 500;">
                    Créer un compte
                </a>
            </p>
        </div>
    </form>
{% endblock %}
