<div class="glass-lg rounded-lg md:rounded-xl p-3 md:p-4 lg:p-5 animate-fade-in">
    <h3 class="text-sm md:text-base font-semibold text-gray-100 mb-2 md:mb-3 flex items-center gap-2">
        <i data-lucide="menu" class="w-4 h-4 text-nsdm-primary-400"></i>
        Navigation
    </h3>
    <nav class="space-y-1 md:space-y-1.5">
        <a href="{{ path('nsdm_home') }}" class="glass-hover block px-2.5 py-1.5 md:px-3 md:py-2 rounded-lg text-gray-200 hover:text-nsdm-primary-400 transition-colors text-sm">
            <i data-lucide="home" class="w-3.5 h-3.5 inline mr-1.5 md:mr-2"></i>
            Accueil
        </a>
        <a href="{{ path('nsdm_about') }}" class="glass-hover block px-2.5 py-1.5 md:px-3 md:py-2 rounded-lg text-gray-200 hover:text-nsdm-primary-400 transition-colors text-sm">
            <i data-lucide="info" class="w-3.5 h-3.5 inline mr-1.5 md:mr-2"></i>
            À propos
        </a>
    </nav>
    
    <!-- Séparateur -->
    <hr class="border-t border-nsdm-primary-400/30 my-3 md:my-4">
    
    <h3 class="text-sm md:text-base font-semibold text-gray-100 mb-2 md:mb-3 flex items-center gap-2">
        <i data-lucide="user" class="w-4 h-4 text-nsdm-primary-400"></i>
        Compte
    </h3>
    {% if app.user %}
        <div class="space-y-1.5 md:space-y-2">
            <div class="glass px-2.5 py-1.5 md:px-3 md:py-2 rounded-lg text-nsdm-primary-400 font-medium text-xs truncate">
                <i data-lucide="mail" class="w-3.5 h-3.5 inline mr-1.5"></i>
                {{ app.user.email }}
            </div>
            <a href="{{ path('nsdm_logout') }}" class="btn-primary w-full block text-center">
                <i data-lucide="log-out" class="w-3.5 h-3.5 inline mr-1.5"></i>
                Déconnexion
            </a>
        </div>
    {% else %}
        <div class="space-y-1 md:space-y-1.5">
            <a href="{{ path('nsdm_login') }}" class="glass-hover block px-2.5 py-1.5 md:px-3 md:py-2 rounded-lg text-gray-200 hover:text-nsdm-primary-400 transition-colors text-center text-sm">
                <i data-lucide="log-in" class="w-3.5 h-3.5 inline mr-1.5"></i>
                Connexion
            </a>
            <a href="{{ path('nsdm_register') }}" class="btn-primary w-full block text-center">
                <i data-lucide="user-plus" class="w-3.5 h-3.5 inline mr-1.5"></i>
                Inscription
            </a>
        </div>
    {% endif %}
</div>
