# MariaDB Connection Settings
DB_HOST=db
DB_PORT=3306
DB_USER=symfony
DB_PASSWORD=symfony
DB_ROOT_PASSWORD=root

# Database Names
DB_SLNS_NAME=slns_db
DB_NSDM_NAME=nsdm_db

# Multisite - 2 bases de données séparées
