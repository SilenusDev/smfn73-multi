# ============================================
# SYMFONY ENVIRONMENT CONFIGURATION
# ============================================
APP_ENV=dev
APP_SECRET=your_secret_key_here_change_in_production

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MariaDB Connection Settings
DB_HOST=db
DB_PORT=3306
DB_USER=symfony
DB_PASSWORD=symfony
DB_ROOT_PASSWORD=root

# Database Names
DB_SLNS_NAME=slns_db
DB_NSDM_NAME=nsdm_db

# Multisite - 2 bases de données séparées
DATABASE_SLNS_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_SLNS_NAME}?serverVersion=mariadb-10.11.2&charset=utf8mb4"
DATABASE_NSDM_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NSDM_NAME}?serverVersion=mariadb-10.11.2&charset=utf8mb4"

# ============================================
# PODMAN/DOCKER PORTS CONFIGURATION
# ============================================
WEB_PORT=8080
DB_PORT_EXTERNAL=3306
PHPMYADMIN_PORT=8081
NODE_PORT=5173

