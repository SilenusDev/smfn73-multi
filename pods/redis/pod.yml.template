# pods/redis/pod.yml.template
# Configuration du pod Redis (cache Symfony)
# Ce fichier est un TEMPLATE - il sera généré automatiquement par generate-pod-configs.sh

apiVersion: v1
kind: Pod
metadata:
  name: ${PROJECT_NAME}-redis-pod
  labels:
    app: ${PROJECT_NAME}
    service: redis
    category: cache
spec:
  containers:
  - name: ${PROJECT_NAME}-redis
    image: ${IMAGE_REDIS}
    ports:
    - containerPort: 6379
      hostPort: ${REDIS_PORT}
    command: ["redis-server", "/usr/local/etc/redis/redis.conf"]
    volumeMounts:
    - name: redis-data
      mountPath: /data
    - name: redis-config
      mountPath: /usr/local/etc/redis
  volumes:
  - name: redis-data
    hostPath:
      path: ${PROJECT_ROOT}/pods/redis/data
      type: DirectoryOrCreate
  - name: redis-config
    hostPath:
      path: ${PROJECT_ROOT}/pods/redis/config
      type: DirectoryOrCreate
  restartPolicy: Always
