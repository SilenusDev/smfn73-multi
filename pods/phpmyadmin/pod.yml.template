# pods/phpmyadmin/pod.yml.template
# Configuration du pod phpMyAdmin
# Ce fichier est un TEMPLATE - il sera généré automatiquement par generate-pod-configs.sh

apiVersion: v1
kind: Pod
metadata:
  name: ${PROJECT_NAME}-phpmyadmin-pod
  labels:
    app: ${PROJECT_NAME}
    service: phpmyadmin
    category: optional
spec:
  containers:
  - name: ${PROJECT_NAME}-phpmyadmin
    image: ${IMAGE_PHPMYADMIN}
    ports:
    - containerPort: 80
      hostPort: ${PHPMYADMIN_PORT}
    env:
    - name: PMA_HOST
      value: "${HOST}"
    - name: PMA_PORT
      value: "${MARIADB_PORT}"
    - name: MYSQL_ROOT_PASSWORD
      value: "${DB_ROOT_PASSWORD}"
  restartPolicy: Always
