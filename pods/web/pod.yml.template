# pods/web/pod.yml.template
# Pod combiné Apache + PHP-FPM (architecture similaire à Docker)
# Ce fichier est un TEMPLATE - il sera généré automatiquement par generate-pod-configs.sh

apiVersion: v1
kind: Pod
metadata:
  name: ${PROJECT_NAME}-web-pod
  labels:
    app: ${PROJECT_NAME}
    service: web
    category: webserver
spec:
  containers:
  # Conteneur PHP-FPM
  - name: ${PROJECT_NAME}-php
    image: ${IMAGE_PHP}
    ports:
    - containerPort: 9000
      protocol: TCP
    env:
    - name: DATABASE_SLNS_URL
      value: "${DATABASE_SLNS_URL}"
    - name: DATABASE_NSDM_URL
      value: "${DATABASE_NSDM_URL}"
    - name: REDIS_URL
      value: "${REDIS_URL}"
    - name: APP_ENV
      value: "${APP_ENV}"
    - name: APP_SECRET
      value: "${APP_SECRET}"
    volumeMounts:
    - name: symfony-code
      mountPath: /var/www/html
    - name: web-logs
      mountPath: /var/log/php
  
  # Conteneur Composer (utilitaire)
  - name: ${PROJECT_NAME}-composer
    image: ${IMAGE_COMPOSER}
    command: ["tail", "-f", "/dev/null"]
    volumeMounts:
    - name: symfony-code
      mountPath: /var/www/html
    workingDir: /var/www/html
  
  # Conteneur Apache
  - name: ${PROJECT_NAME}-apache
    image: ${IMAGE_APACHE}
    ports:
    - containerPort: 80
      hostPort: ${APACHE_PORT}
    command: 
    - sh
    - -c
    - |
      # Activer les modules nécessaires
      sed -i 's/#LoadModule rewrite_module/LoadModule rewrite_module/' /usr/local/apache2/conf/httpd.conf
      sed -i 's/#LoadModule proxy_module/LoadModule proxy_module/' /usr/local/apache2/conf/httpd.conf
      sed -i 's/#LoadModule proxy_fcgi_module/LoadModule proxy_fcgi_module/' /usr/local/apache2/conf/httpd.conf
      sed -i 's/#LoadModule vhost_alias_module/LoadModule vhost_alias_module/' /usr/local/apache2/conf/httpd.conf
      
      # Inclure les VirtualHosts
      echo "Include conf/vhosts/*.conf" >> /usr/local/apache2/conf/httpd.conf
      
      # Démarrer Apache
      httpd-foreground
    volumeMounts:
    - name: web-config
      mountPath: /usr/local/apache2/conf/vhosts
    - name: web-logs
      mountPath: /var/log/apache2
    - name: symfony-code
      mountPath: /var/www/html
  
  volumes:
  - name: symfony-code
    hostPath:
      path: ${PROJECT_ROOT}
      type: Directory
  - name: web-config
    hostPath:
      path: ${PROJECT_ROOT}/pods/web/config
      type: DirectoryOrCreate
  - name: web-logs
    hostPath:
      path: ${PROJECT_ROOT}/pods/web/logs
      type: DirectoryOrCreate
  restartPolicy: Always
